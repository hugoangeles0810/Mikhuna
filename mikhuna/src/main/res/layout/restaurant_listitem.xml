<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/restaurant_image_url"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:src="@drawable/type_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_restaurant_data"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/restaurant_list_item_title"
                style="@style/restaurant_list_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:singleLine="true"
                android:text="L'Ancora Grill"/>

            <TextView
                android:id="@+id/restaurant_list_item_is_open"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/restaurant_open"
                android:gravity="right"
                android:text="Abierto"/>

        </LinearLayout>

        <TextView
            android:id="@+id/restaurant_list_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            style="@style/restaurant_list_item_description"
            android:layout_marginTop="0dp"
            android:paddingTop="0dp"
            android:text="Pizzas, Pastas y Parrillas *Delivery sÃ³lo: Lunes, miercoles y viernes"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp">

            <RatingBar
                android:id="@+id/restaurant_list_item_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:isIndicator="true"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding"
                style="@style/default_rating_bar"
                android:numStars="5"/>

            <TextView
                android:id="@+id/restaurant_list_item_service_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/restaurant_list_item_service"
                android:gravity="right"
                android:text="Delivery"/>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
