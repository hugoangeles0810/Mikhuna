<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/promotion_image"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:src="@drawable/type_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_material"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/restaurant_promotion_listitem_title"
            style="@style/restaurant_list_item_title"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:singleLine="true"
            android:text="PromociÃ³n Tragos"/>

        <TextView
            android:id="@+id/restaurant_promotion_listitem_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            style="@style/restaurant_list_item_description"
            android:text="Tragos 2x1"/>

            <TextView
                android:id="@+id/restaurant_promotion_listitem_validity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/restaurant_list_item_description"
                android:visibility="gone"
                android:text="Desde 17/01/15 hasta 31/12/15"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/restaurant_list_item_title"
                android:textSize="15sp"
                android:text="En "/>

            <TextView
                android:id="@+id/restaurant_promotion_listitem_restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/restaurant_list_item_title"
                android:textSize="15sp"
                android:text="Mil Sabores"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>

