<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/restaurant_list_item_vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/restaurant_promotion_listitem_logo"
            android:layout_width="@dimen/image_small"
            android:layout_height="@dimen/image_small"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher"
            android:contentDescription="@string/restaurant_logo_description"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_layout_margin"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/restaurant_promotion_listitem_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/restaurant_promotion_listitem_title"
                />

            <TextView
                android:id="@+id/restaurant_promotion_listitem_restaurant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/restaurant_promotion_listitem_validity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/restaurant_promotion_listitem_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>